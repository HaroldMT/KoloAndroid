<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.cyberix.kolo">

    <!-- Permissions -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_koloapp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_koloapp_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.DashboardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.KoloUserProfilActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.KoloUserQRCodeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.KoloTransferP2pSendActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SignUpConfirmationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SimpleBillActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.KoloTransferP2pReceiveActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.KoloTopUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.KoloEneoBillPaymentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.CreditCardInputActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.KoloMadActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.KoloEneoPayBillActivity"></activity>
        <activity
            android:name=".activities.KoloHomeActivity"
            android:label="@string/title_activity_kolo_home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activities.AboutUsActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activities.PrivacyPolicyActivity"
            android:screenOrientation="portrait"></activity>
        <service
            android:name=".services.NotificationsService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_MMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

</manifest>